<Window x:Class="Val_Inventario.EliminarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Val_Inventario"
        mc:Ignorable="d"
        Title="EliminarWindow" Height="300" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="¿Desea eliminar esta transacción?" Margin="10"/>
            <Label Content="Número de Registro:" Margin="10"/>
            <TextBox x:Name="txtNumeroRegistro" Width="150" Margin="10"/>
            <Button Content="Confirmar" Width="100" Height="30" Click="Confirmar_Click" Margin="10"/>
            <Button Content="Cancelar" Width="100" Height="30" Click="Cancelar_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>

